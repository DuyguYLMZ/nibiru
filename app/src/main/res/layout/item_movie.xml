<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="atlasyazilim.nto.biletplaza.util.Constants" />

        <variable
            name="movie"
            type="mycase.musetechs.model.Movie" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/radius_17dp"
            app:layout_constraintDimensionRatio="H,2:3"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintWidth_percent="0.3"
            app:setImageUrl='@{ Constants.IMAGE_BASE_URL + Constants.IMAGE_W154 + "/" + movie.poster_path}' />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/movieName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ movie.original_title}"
                android:textColor="@color/black"
                android:paddingRight="5dp"
                tools:text="Film Adı" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movieVote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="5dp"
                    android:text="@{ Double.toString(movie.vote_average)}"
                    android:textColor="@color/black"
                    tools:text="Film Adı" />
                <TextView
                    android:id="@+id/voteAmount"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@id/movieVote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@{Integer.toString(movie.vote_count)}"
                    android:textColor="@color/black"
                    tools:text="Film Adı" />*/
            </RelativeLayout>

            <TextView
                android:id="@+id/movieType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ movie.media_type}"
                android:textColor="@color/black"
                tools:text="Film Adı" />
            <TextView
                android:id="@+id/movieDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@{ movie.overview}"
                android:textColor="@color/black"
                tools:text="Film Adı" />

        </LinearLayout>


    </LinearLayout>
</layout>